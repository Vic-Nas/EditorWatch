# Example environment variables for EditorWatch
# Copy to .env and set appropriate values for your deployment.

# Database
DATABASE_URL=sqlite:///editorwatch.db

# Redis for RQ
REDIS_URL=redis://localhost:6379

# Flask secret key (change in production)
SECRET_KEY=change-me

# Admin credentials (change in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Optional: server external URL (used for config download links)
# SERVER_URL=https://your-server.example.com

# Encryption key for Fernet (base64 urlsafe). If not set, a key will be generated at runtime.
# Recommended: generate once and store securely.
# Example value (do NOT use this example value in production):
# ENCRYPTION_KEY=VinV14tSv71QLbTktgYbI7sS-rwLvyx-PBXOi6gr7vc=

# Optional SMTP settings for sending access codes
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
